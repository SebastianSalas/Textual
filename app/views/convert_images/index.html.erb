<div class = "px-6 w-full  flex-wrap items-center justify-between">
<% @images.each do |image| %>

<%if image.text_result.present?%>
<br>
<div class=" justify-center">
  <div class="block p-6 rounded-lg shadow-lg bg-white max-w-sm">
    <h5 class="text-gray-900 text-xl leading-tight font-medium mb-2"><%= image.text_result%></h5>
    <p class="text-gray-700 text-base mb-4">
      - Hace <%= time_ago_in_words(image.created_at) %>
    </p>
    <hr>
  </div>
</div>
<%else%>

<%end%>

<%end%>
</div>